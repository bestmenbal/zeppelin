<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sktelecom.cep.dao.FlowObjectDao">

    <resultMap id="FlowObjectMap" type="com.sktelecom.cep.vo.FlowObject">
        <result property="objectId" column="object_id" />
        <result property="flowId" column="flow_id" />
        <result property="resourceId" column="resource_id" />
        <result property="resourceType" column="resource_type" />
        <result property="createDate" column="create_date" />
        <result property="updateDate" column="update_date" />
    </resultMap>

    <insert id="create" parameterType="com.sktelecom.cep.vo.FlowObject">
        INSERT INTO flow_object(object_id, flow_id, resource_id, resource_type, create_date)
        VALUES (#{objectId}, #{flowId}, #{resourceId}, #{resourceType}, now())
    </insert>

    <delete id="deleteByFlowId" parameterType="com.sktelecom.cep.vo.FlowObject">
        DELETE FROM flow_object
        WHERE flow_id = #{flowId}
    </delete>

    <select id="getListByFlowId" resultMap="FlowObjectMap" parameterType="com.sktelecom.cep.vo.FlowObject">
        SELECT object_id, flow_id, resource_id, resource_type, create_date, update_date
        FROM flow_object
        WHERE flow_id = #{flowId}
    </select>

</mapper>
